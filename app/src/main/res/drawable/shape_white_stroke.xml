<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <solid android:color="#02000000" />
            <padding android:bottom="@dimen/_1sdp"
                android:top="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:left="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#04000000" />
            <padding android:bottom="@dimen/_1sdp"
                android:top="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:left="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#06000000" />
            <padding android:bottom="@dimen/_1sdp"
                android:top="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:left="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="#08000000" />
            <padding android:bottom="@dimen/_1sdp"
                     android:top="@dimen/_1sdp"
                      android:right="@dimen/_1sdp"
                      android:left="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <!-- main background !-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#FFF" />
            <gradient
                android:angle="90"
                android:endColor="#ffffff"
                android:startColor="#ffffff" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>


</layer-list>