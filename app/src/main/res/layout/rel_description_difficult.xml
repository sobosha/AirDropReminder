<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp">


        <RelativeLayout
            android:clickable="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/dialogColor"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp">


            <ScrollView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMonth"
                android:fadeScrollbars="true"
                android:paddingBottom="@dimen/_10sdp"
                android:scrollbarSize="5dp"
                android:scrollbarThumbVertical="@drawable/shape_cerv_sorme"
                android:scrollbars="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                    android:fontFamily="@font/"
                    android:id="@+id/txtDescriptionOmen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="right"
                    android:textColor="?DrakBlueWhite"
                    android:text=""
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_below="@+id/txtDescriptionOmen"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtAccept"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/shape_green_btn"
                        android:elevation="@dimen/_3sdp"
                        android:gravity="center"
                        android:text="Understand"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                </RelativeLayout>
                </RelativeLayout>

            </ScrollView>


        </RelativeLayout>

        <TextView
            android:id="@+id/txtIdea"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="?grayLightBlue"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp"
            android:text="فال روز"
            android:textColor="?whiteBlue"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />




    </RelativeLayout>
</RelativeLayout>