<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crdParentRemember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/imgBackGround"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20sdp">


            <!-- lin top -->

            <!-- txt desc -->
            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center"
                android:text="با دونستن این اطلاعات، دوره‌های بعدی رو دقیق‌تر پیش‌بینی می‌کنیم"
                android:textColor="?attr/DrakBlueWhite"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:visibility="visible" />

            <!-- txt title -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center"
                android:text="با دونستن این اطلاعات، دوره‌های بعدی رو دقیق‌تر پیش‌بینی می‌کنیم"
                android:textColor="?attr/DrakBlueWhite"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:visibility="gone" />


            <!-- btns -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnCancle"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="?shape_cerv"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="قبلی"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnOkay"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@drawable/shape_btn_green"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="ثبت"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:gravity="right|center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="دیگر به من نشان نده"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="?DrakBlueWhite"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    />

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="?DrakBlueWhite"
                    android:layout_alignParentRight="true"
                    />



            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/imgStroke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp" />


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignTop="@+id/crdParentRemember"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_minus50sdp"
        android:elevation="@dimen/_5sdp" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgIconRound"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignTop="@+id/crdParentRemember"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_minus50sdp"
        android:elevation="@dimen/_5sdp"

        app:riv_corner_radius="@dimen/_5sdp" />

</RelativeLayout>