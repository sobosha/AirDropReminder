<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmActivity"
    android:id="@+id/relAlarm"
   android:paddingBottom="@dimen/_15sdp"
    android:background="#f6fafb"
>

    <RelativeLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_above="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:text="یادآور آب"
            android:textColor="#707070"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textTitle"
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp" />

        <TextView
            android:id="@+id/txtTimeDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="12:55"
            android:textColor="#707070"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>


    <TextView
        android:layout_above="@+id/btnOkk"
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:text="یک لیوان آب بنوش"
        android:textColor="#707070"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />



    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:id="@+id/btnOkk"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:elevation="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/OK"
        android:textColor="@color/sormeii"
        android:textSize="@dimen/_15sdp"
        android:background="@drawable/shape_cerv_light"/>
</RelativeLayout>